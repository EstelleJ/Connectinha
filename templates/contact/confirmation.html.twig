{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block description %}
  Une question ? Un message ? Contactez-nous pour plus d'informations. L'équipe de Mindcursus se tient à disposition pour vous.
{% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('css/client/contact.css') }}">
{% endblock %}

{% block body %}
    <section id="contact">
        <div class="container">
            <h1>Envoyez-nous <span>un message</span></h1>

            <div class="bloc-form">
                <h2>Votre message a bien été envoyé</h2>

                <p>
                  Merci beaucoup et à bientôt !
                </p>

                <div class="bloc-btn">
                  <a href="{{ path('index') }}" class="btn">
                    Retour à la page d'accueil
                  </a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
