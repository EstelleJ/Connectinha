{% extends 'base.html.twig' %}

{% block title %}Sélectionnez une heure - Programmer un rendez-vous{% endblock %}

{% block description %}
	Définissez l'heure de votre rendez-vous en région parisienne pour une séance de magnétisme ou un soin énergétique.
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/client/agenda.css') }}">
{% endblock %}

{% block body %}
	<section id="banner">
		<h1>
			<span class="rougeScript tc-white">Les prestations</span>
			<span class="amatic tc-white uppercase">Réserver une séance</span>
		</h1>
	</section>

	<section id="rdv">
		<div class="container">
			<h2 class="amatic tc-blue">Programmer un rendez-vous</h2>

			<div class="bloc-choix">
				<h3>À quelle heure êtes-vous disponible le {{ day }} {{ date }} <br>
					pour votre rendez-vous qui durera {{ service.duration }} ?</h3>

				{% if error %}
					<div class="error">
						{{ error }}
					</div>
				{% endif %}

				{{ form_start(form) }}
				<input type="hidden" name="service-id" value="{{ serviceId }}">
				<input type="hidden" name="date" value="{{ date }}">

				<label for="hour">Sélectionnez l'heure qui vous convient</label>
				<select id="hour" name="hour">
					{% for hour in hours %}
						<option value="{{ hour|trim() }}">{{ hour }}</option>
					{% endfor %}
				</select>

				<div class="line">
					{{ form_label(form.name) }}
					{{ form_widget(form.name) }}
				</div>

				<div class="line">
					{{ form_label(form.firstname) }}
					{{ form_widget(form.firstname) }}
				</div>

				<div class="line">
					{{ form_label(form.email) }}
					{{ form_widget(form.email) }}
				</div>

				<div class="line">
					{{ form_label(form.phoneNumber) }}
					<p>Veuillez indiquer votre numéro de téléphone sans espaces.</p>
					{{ form_widget(form.phoneNumber) }}
				</div>

				<div class="btns rdv">
					<button class="btn tc-white" type="submit">Réserver le rendez-vous</button>
				</div>
				{{ form_end(form) }}

			</div>

		</div>
	</section>
{% endblock %}

{% block javascripts %}

{% endblock %}
