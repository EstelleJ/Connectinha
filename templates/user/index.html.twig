{% extends 'base.html.twig' %}

{% block title %}Votre espace client{% endblock %}

{% block description %}

{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/client/user.css') }}">
{% endblock %}

{% block body %}
    <section id="banner">
        <div class="container">

        </div>
    </section>

    <section id="profile">
        <div class="container">
            <h1>
                <span class="rougeScript tc-blue">
                    Bonjour {{ user.firstName }} {{ user.name }},
                </span>
                <span class="amatic uppercase">Bienvenue dans votre espace client</span>
            </h1>

            <div class="content">
                <div class="column">
                    <div class="bloc-user">
                        <h2>Vos informations personnelles</h2>

                        <h3>{{ user.firstName }} {{ user.name }}</h3>

                        <p>{{ user.email }}</p>
                        <p>{{ user.customer.phone }}</p>

                    </div>

                    {% include 'includes/_user_cart_saved.html.twig' %}
                </div>

                <div class="elements">
                    {% if order %}
                    <h2>Votre dernière commande</h2>

                    <div class="order">
                        <h3>Commande n°{{ order.orderNumber }} - <span><i class="fas fa-box"></i>{{ order.status }}</span></h3>
                        <p>du {{ order.date|date('d m Y') }}</p>

                        {% for product in arrayProducts %}
                        <div class="products">
                            <div class="product">
                                <h4>{{ product.name }} - 9,90 €</h4>
                                {% for mantra in product.mantraProducts %}
                                    {% if mantra == mantraSelected %}
                                        <p>{{ mantraSelected }}</p>
                                    {% endif %}
                                {% endfor %}
                            </div>

                            <div class="plus">
                                <span></span>
                                <span></span>
                                <span></span>
                            </div>
                        </div>
                        {% endfor %}
                        <h4>Total de la commande : 38 €</h4>

                        <div class="btns">
                            <a href="" class="bg-blue tc-white btn">
                                <i class="fas fa-plus"></i> Voir le détail de la commande
                            </a>
                        </div>
                    </div>
                    {% else %}
                        <h2>Vous n'avez pas encore de commande</h2>
                    {% endif %}
                </div>

            </div>

        </div>
    </section>
{% endblock %}
