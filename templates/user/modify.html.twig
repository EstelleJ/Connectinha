{% extends 'base.html.twig' %}

{% block title %}Votre espace client{% endblock %}

{% block description %}

{% endblock %}

{% block javascripts %}
	<script src="{{ asset('js/user/ajax-user-delete.js') }}" type="module"></script>
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/client/user.css') }}">
{% endblock %}

{% block body %}
	<section id="banner">
		<div class="container">

		</div>
	</section>

	<section id="profile">
		<div class="container">
			<h1>
          <span class="rougeScript tc-blue">
              Bonjour {{ user.firstName }} {{ user.name }},
          </span>
					<span class="amatic uppercase">Bienvenue dans votre espace client</span>
			</h1>

			<div class="content">
				<div class="column">
					<div class="bloc-user">
						<h2>Vos informations personnelles</h2>

						<h3>{{ user.firstName }} {{ user.name }}</h3>

						<p>{{ user.email }}</p>
						<p>{{ user.customer.phone }}</p>

					</div>

					{% include 'includes/_user_cart_saved.html.twig' %}
				</div>

				<div class="elements">
					{{ form_start(form) }}
					<div class="userId">
						<h2>Modifier vos informations de connexion</h2>

						<p>Email de connexion : {{ user.email }}</p>
						{{ form_row(form.password) }}
					</div>


					<h2>Modifier vos informations personnelles</h2>


					{{ form_end(form) }}
				</div>

			</div>

		</div>
	</section>
{% endblock %}