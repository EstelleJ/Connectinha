{% extends 'base.html.twig' %}

{% block title %}Votre espace client{% endblock %}

{% block description %}

{% endblock %}

{% block javascripts %}
	<script src="{{ asset('js/user/ajax-user-delete.js') }}" type="module"></script>
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/client/user.css') }}">
{% endblock %}

{% block body %}
	<section id="banner">
		<div class="container">

		</div>
	</section>

	<section id="profile">
		<div class="container">
			<h1>
                <span class="rougeScript tc-blue">
                    Bonjour {{ user.firstName }} {{ user.name }},
                </span>
				<span class="amatic uppercase">Bienvenue dans votre espace client</span>
			</h1>

			<div class="content">
				<div class="column">
					<div class="bloc-user">
						<h2>Vos informations personnelles</h2>

						<h3>{{ user.firstName }} {{ user.name }}</h3>

						<p>{{ user.email }}</p>
						<p>{{ user.customer.phone }}</p>

					</div>

					{% include 'includes/_user_cart_saved.html.twig' %}
				</div>

				<div class="elements">

						<h2>Vos derniers rendez-vous</h2>

						{% for rdv in user.rendezvouses %}
							<div class="user-order">
								<h3>Rendez-vous pour une séance de : <span><i class="fas fa-star"></i>{{ rdv.service }}</span></h3>
								<p>du {{ rdv.date|date('d/m/Y') }} à {{ rdv.hours.hour|format_datetime('none', 'short', locale='fr') }}</p>
								<p>Durée du rendez-vous : {{ rdv.duration }}</p>
							</div>
						{% endfor %}

				</div>

			</div>

		</div>
	</section>
{% endblock %}
