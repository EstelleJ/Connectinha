{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block description %}
	Connectez-vous et accédez à votre espace personnel, dans lequel vous trouverez le suivi et le détails de vos commandes sur ......
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/client/form.css') }}">
	<link rel="stylesheet" href="{{ asset('css/client/connexion.css') }}">
{% endblock %}

{% block body %}

	<section id="login">
		<div class="container">
			<div class="bloc-form">
				<form method="post">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					{% if app.user %}
						<div class="mb-3">
							Bonjour {{ app.user.username }}
						</div>
					{% endif %}

					<h1>Connectez-vous</h1>
					<div class="line">
						<label for="inputEmail">Email</label>
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
						       autocomplete="email" placeholder="Tapez votre Email" required autofocus>
					</div>
					<div class="line">
						<label for="inputPassword">Mot de passe</label>
						<input type="password" name="password" id="inputPassword" placeholder="Tapez votre Mot de passe" class="form-control" autocomplete="current-password"
						       required>
					</div>


					<input type="hidden" name="_csrf_token"
					       value="{{ csrf_token('authenticate') }}"
					>

					{#
					Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
					See https://symfony.com/doc/current/security/remember_me.html

					<div class="checkbox mb-3">
							<label>
									<input type="checkbox" name="_remember_me"> Remember me
							</label>
					</div>
					#}
					<div class="bloc-register">
						<a href="{{ path('app_register') }}">Vous n'avez pas encore de compte ? Inscrivez-vous</a>
					</div>

					<div class="btns">
						<button class="btn" type="submit" title="Connectez-vous à votre espace et retrouvez vos informations personnelles">
							<i class="fas fa-user"></i> Connexion
						</button>
					</div>

				</form>
			</div>

		</div>
	</section>

{% endblock %}
