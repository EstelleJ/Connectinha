{% extends 'base_admin.html.twig' %}

{% block title %}Ajouter{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/admin/table.css') }}">
	<link rel="stylesheet" href="{{ asset('css/admin/diary.css') }}">
{% endblock %}

{% block body %}
	<h1><span>Ajouter</span></h1>

	<section class="form">
		{{ form_start(form) }}

		<div class="bloc-left">
			<h2>Ajouter un jour</h2>

			<div class="form-bloc">
				{{ form_label(form.name) }}
				{{ form_widget(form.name) }}
			</div>

			<div class="form-bloc">
				{{ form_label(form.hours) }}
				{{ form_widget(form.hours) }}
			</div>

		</div>

		<div class="bloc-right">
			<h2>Jours disponibles</h2>
			<div class="elements">
				{% for day in days %}
					<a href="{{ path('admin_agenda_days_modify', {'id': day.id }) }}" class="element">
						<span class="icon">
							<i class="far fa-clone"></i>
						</span>
						{{ day.name }}
					</a>
				{% endfor %}
			</div>
		</div>

		<div class="btns center">
			<a class="btn" href="{{ path('admin_agenda_days', {'page': '1'}) }}">
				<i class="fas fa-angle-left"></i> Retour
			</a>
			<button type="submit" class="btn add">
				<i class="fas fa-check"></i> Valider
			</button>
		</div>

		{{ form_end(form) }}
	</section>
{% endblock %}
