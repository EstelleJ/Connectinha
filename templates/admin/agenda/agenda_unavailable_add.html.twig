{% extends 'base_admin.html.twig' %}

{% block title %}Ajouter{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/admin/table.css') }}">
    <link rel="stylesheet" href="{{ asset('css/admin/diary.css') }}">
{% endblock %}

{% block body %}
    <h1><span>Ajouter</span></h1>

    <section class="form">
        {{ form_start(form) }}

        <div class="bloc-left">
            <h2>Ajouter une indisponibilit√©</h2>

            <div class="form-bloc">
                {{ form_label(form.date) }}
                {{ form_widget(form.date) }}
            </div>

        </div>

        <div class="bloc-right">
            <h2>Jours indisponibles</h2>
            <div class="elements">
                {% for unavailable in unavailables %}
                    <a href="{{ path('admin_agenda_unavailable_modify', {'id': unavailable.id }) }}" class="element">
							<span class="icon">
									<i class="far fa-clone"></i>
							</span>
                        {{ unavailable.date|format_datetime(locale='fr',pattern="dd MMMM") }}
                    </a>
                {% endfor %}
            </div>
        </div>

        <div class="btns center">
            <a class="btn" href="{{ path('admin_agenda_unavailable', {'page': '1'}) }}">
                <i class="fas fa-angle-left"></i> Retour
            </a>
            <button type="submit" class="btn add">
                <i class="fas fa-check"></i> Valider
            </button>
        </div>

        {{ form_end(form) }}
    </section>
{% endblock %}
