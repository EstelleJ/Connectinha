{% extends 'base_admin.html.twig' %}

{% block title %}Mantras{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/admin/produit.css') }}">
{% endblock %}

{% block javascripts %}
	<script type="module" src="{{ asset('js/deletes/mantras-admin.js') }}"></script>
{% endblock %}

{% block body %}
	<h1 class="a-center">Ici vous pouvez gérer vos mantras</h1>

	<section class="bloc-actions dflex">
		<div class="number">
			<h2>
				<span class="square">
					<i class="fas fa-shopping-bag"></i>
				</span>
				<span class="texte">
					Vous avez {{ elements|length }} mantras disponibles
				</span>
			</h2>
		</div>
		<div class="btns dflex">
			<a href="{{ path('admin_products_add') }}" class="btn">
				<i class="fas fa-plus"></i> Ajouter un produit
			</a>
			<a href="{{ path('admin_category_add') }}" class="btn">
				<i class="fas fa-layer-group"></i> Ajouter une catégorie de produit
			</a>
			<a href="{{ path('admin_mantra', {'page': '1'}) }}" class="btn">
				<i class="fas fa-layer-group"></i> Voir les mantras
			</a>
			<a href="{{ path('admin_mantra_add') }}" class="btn">
				<i class="fas fa-plus"></i> Ajouter un mantra
			</a>
		</div>
	</section>

	<section class="table">
		<div class="head dflex">
			<h3 class="mantra">
				Mantra
			</h3>
			<div class="search">
				Rechercher
			</div>
		</div>
		{% for mantra in mantras %}
			<a href="{{ path('admin_mantra_modify', {'id': mantra.id }) }}" class="element produit-mantra">

				<span class="data mantra">
					{{ mantra.mantra }}
				</span>

				<span class="btns dflex">
					<button class="btn action">
						<i class="fas fa-edit"></i> Modifier
					</button>
					<button class="btn delete" data-id="{{ mantra.id }}">
						<i class="fas fa-trash"></i> Supprimer
					</button>
				</span>
			</a>
		{% endfor %}
	</section>

	{% include 'includes/_pagination.html.twig' with {'link': 'admin_mantra' } %}
{% endblock %}

