{% extends 'base_admin.html.twig' %}

{% block title %}Ajouter - Promotion{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/admin/produit.css') }}">
	<link rel="stylesheet" href="{{ asset('css/admin/discount.css') }}">
{% endblock %}

{% block body %}
	<h1 class="a-center">Gérer vos promotions</h1>

	<div class="dflex products">

		{{ form_start(form) }}
		<h2><i class="fas fa-shopping-bag"></i> Ajouter une promotion</h2>

		{% for message in app.flashes('success') %}
			<div class="alert success">
				<p>{{ message }}</p>
			</div>
		{% endfor %}

		{% if error %}
			<div class="alert error">
				<p>{{ error }}</p>
			</div>
		{% endif %}
		<div class="large-bloc">
			<div class="line">
				{{ form_label(form.title) }}
				{{ form_widget(form.title) }}
			</div>

		</div>

		<div class="small-bloc">

			<div class="line">
				{{ form_label(form.offer) }}
				{{ form_widget(form.offer) }}
			</div>

			<div class="line percent">
				{{ form_label(form.products) }}
				{{ form_widget(form.products) }}
			</div>

		</div>


		<div class="bloc">
			{{ form_widget(form.submit, {'label': 'Ajouter', 'attr': {'class': 'btn action'}}) }}
		</div>
		{{ form_end(form) }}

		<div class="produits">
			<h2><i class="fas fa-shopping-bag"></i> Vos promotions</h2>

			{% for promo in promos %}
				<a href="{{ path('admin_discount_ticket_modify', {'id': promo.id }) }}"
				   class="element produit">
					<span class="data code">{{ promo.title }}</span>
					<span class="titre">{{ ticket.offer }} €</span>
				</a>
			{% endfor %}

			<div class="btns dflex">
				<a href="{{ path('admin_special_offers', {'page': '1'}) }}" class="btn">
					<i class="fas fa-list-ul"></i> Voir toutes les promotions
				</a>
			</div>
		</div>
	</div>
{% endblock %}
