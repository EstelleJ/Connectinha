{% extends 'base_admin.html.twig' %}

{% block title %}Ajouter - Tranche de frais de port{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/admin/produit.css') }}">
{% endblock %}

{% block body %}
	<h1 class="a-center">Gérer vos tranches de frais de port</h1>

	<div class="dflex products">

		{{ form_start(form) }}
		<h2><i class="fas fa-shipping-fast"></i> Ajouter une tranche</h2>

		{% for message in app.flashes('success') %}
			<div class="alert success">
				<p>{{ message }}</p>
			</div>
		{% endfor %}

		<div class="large-bloc">
			<div class="line">
				{{ form_label(form.min) }}
				{{ form_widget(form.min) }}
			</div>

			<div class="line">
				{{ form_label(form.max) }}
				{{ form_widget(form.max) }}
			</div>
		</div>

		<div class="small-bloc">
			<div class="line price">
				{{ form_label(form.price) }}
				{{ form_widget(form.price) }}
			</div>
		</div>


		<div class="bloc">
			{{ form_widget(form.submit, {'label': 'Ajouter', 'attr': {'class': 'btn action'}}) }}
		</div>
		{{ form_end(form) }}

		<div class="produits">
			<h2><i class="fas fa-shopping-bag"></i> Vos tranches</h2>

			{% for shipping in shippings %}
				<a href="{{ path('admin_shipping_modify', {'id': shipping.id }) }}"
				   class="element produit">

					<span class="min">Min : {{ shipping.min }}g</span>
					<span class="max">Max : {{ shipping.max }}g</span>
					<span class="price">Prix : {{ shipping.price }} €</span>
				</a>
			{% endfor %}

			<div class="btns dflex">
				<a href="{{ path('admin_shipping', {'page': '1'}) }}" class="btn">
					<i class="fas fa-list-ul"></i> Voir toutes les tranches
				</a>
			</div>
		</div>
	</div>
{% endblock %}
